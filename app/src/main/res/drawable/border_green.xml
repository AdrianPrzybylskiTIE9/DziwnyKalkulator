<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:top="0dp"
        android:left="7dp"
        android:right="7dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#6cbc44"
                android:endColor="#6cbc44" />
            <stroke
                android:width="3dp"
                android:color="#000" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <item android:top="0dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#fff"
                android:endColor="#fff" />
            <stroke
                android:width="3dp"
                android:color="#000" />
            <corners android:radius="4dp" />
        </shape>
    </item>

</layer-list>
